{
  "name": "novachat",
  "version": "0.1.0",
  "description": "Novachat - simple AI chatbot scaffold",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p .",
    "client:dev": "vite frontend",
    "client:build": "vite build frontend",
    "dev:all": "concurrently \"npm run client:dev\" \"npm run dev\"",
    "check": "tsc -p . --noEmit && tsc -p frontend/tsconfig.json --noEmit",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "firebase": "^12.5.0",
    "openai": "^4.9.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.1",
    "concurrently": "^8.2.0",
    "electron": "^39.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.0",
    "vite": "^5.2.0"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DearingK1121/Nova-Chat.git"
  },
  "keywords": [],
